{
  "name": "kubedesk",
  "version": "0.0.1",
  "description": "Ferramenta para gerenciar clusters Kubernetes",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --linux --win --mac",
    "clean": "rm -rf dist",
    "test:build": "./test-build.sh",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "kubernetes",
    "electron",
    "k8s",
    "cluster"
  ],
  "author": "Sidnei",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.21.0",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.2",
    "@xterm/xterm": "^5.5.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-web-links": "^0.11.0",
    "ansi-to-html": "^0.7.2"
  },
  "build": {
    "appId": "com.kubedesk.app",
    "productName": "KubeDesk",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons",
      "category": "Development"
    }
  }
}
