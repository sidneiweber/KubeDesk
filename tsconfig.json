{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode"]
}
